#%RAML 0.8
title: Number formats
mediaType: application/json
schemas:
    - sample: |
        {
          "type": "object",
          "$schema": "http://json-schema.org/draft-04/schema",
          "properties": {
            "longprop": {
              "type": "number",
              "format": "long"
            },
            "intprop": { 
              "type": "integer"
            },
            "numberprop": {
              "type":"number"
            },
            "shortprop": {
              "type": "number",
              "format": "short"
            }
          },
          "required": ["numberprop", "intprop"]
        }
/persons:
  get:
    responses:
      200:
        body:
          schema: sample