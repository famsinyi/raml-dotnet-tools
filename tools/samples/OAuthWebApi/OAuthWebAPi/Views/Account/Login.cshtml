<h1>Authorization Server</h1>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form method="POST" class="form-horizontal">
                <h4>Login (Enter any username/password)</h4>
                <div class="form-group">
                    <label for="username" class="col-md-2 control-label">User name: </label>
                    <div class="col-md-10">
                        <input type="text" id="username" name="username" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-md-2 control-label">Password: </label>
                    <div class="col-md-10">
                        <input type="password" id="password" name="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" name="submit.Signin" value="Sign In" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>